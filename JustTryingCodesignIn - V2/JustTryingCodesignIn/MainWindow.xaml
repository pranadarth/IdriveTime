<Window x:Class="JustTryingCodesignIn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JustTryingCodesignIn"
        mc:Ignorable="d" SizeToContent="WidthAndHeight"
        Visibility="Visible"
        Title="CodeSignIn" MinWidth="200" MinHeight="160" MaxWidth="365">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="14" >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style  TargetType="TextBox">
            <Setter Property="Background" Value="white"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Padding" Value="10 0"/>
            <Setter Property="MinWidth" Value="150"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinHeight" Value="35"/>
            <Setter Property="Margin" Value="0 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border BorderBrush="Black" BorderThickness="1.5" Background="{TemplateBinding Background}" Padding="0 5" CornerRadius="12">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                            <TextBlock Text="{TemplateBinding Tag}" Padding="5 0" FontSize="12"
                               Foreground="Black" Margin="10,-10,0,0" Background="White" VerticalAlignment="Top" HorizontalAlignment="Left" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style  TargetType="PasswordBox">
            <Setter Property="Background" Value="white"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Padding" Value="10 0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="MinWidth" Value="150"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinHeight" Value="35"/>
            <Setter Property="Margin" Value="0 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Grid>
                            <Border BorderBrush="Black" BorderThickness="1.5" Background="{TemplateBinding Background}" Padding="0 5" CornerRadius="12">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                            <TextBlock Text="{TemplateBinding Tag}" Padding="5 0" FontSize="12"
                               Foreground="Black" Margin="10,-10,0,0" Background="White" VerticalAlignment="Top" HorizontalAlignment="Left" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#0071BC"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#3F9EDE" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid x:Name="MainGrid" Width="350">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.05*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="45" />
        </Grid.RowDefinitions>

        <Grid Margin="0 10" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Email (hidden when using Google sign-in) -->
            <TextBox x:Name="txtEmail" Tag="Email" Visibility="Collapsed"/>

            <!-- Password (for legacy/app-password mode; hidden) -->
            <PasswordBox x:Name="txtPassword" Grid.Row="1" Tag="Password" Visibility="Collapsed"/>

            <!-- Shared Path -->
            <TextBox x:Name="txtSharedPath" Grid.Row="2" Tag="Path" />

            <!-- Status -->
            <TextBlock x:Name="txtStatus" Grid.Row="4" Margin="0,0,0,0"
                       VerticalAlignment="Center" TextAlignment="Center"
                       FontWeight="Bold" FontSize="14" Foreground="Green"
                       Visibility="Collapsed"/>
        </Grid>

        <Grid Grid.Row="1" Grid.ColumnSpan="3" Background="LightGray">
            <Button x:Name="btnSend" Content="Send" Width="80" Height="30" Margin="0 0 15 0"
                    HorizontalAlignment="Right" Click="btnSend_Click"/>

            <TextBlock x:Name="btnChange" Text="Change Credentials" Margin="10 0 0 0"
                       VerticalAlignment="Center" HorizontalAlignment="Left"
                       MouseLeftButtonDown="btnChange_MouseLeftButtonDown" />

            <!-- Google Sign-in button -->
            <Button x:Name="btnGoogleSignIn" Content="Sign in"
                    Width="90" Height="30" HorizontalAlignment="Center" Click="BtnGoogleSignIn_Click"/>
        </Grid>
    </Grid>
</Window>
