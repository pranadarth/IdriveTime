<Window
    x:Class="JustTryingCodesignIn.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JustTryingCodesignIn"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CodeSignIn"
    Width="400"
    Height="160"
    MinWidth="250"
    MinHeight="160"
    MaxWidth="500"
    MaxHeight="200"
    Visibility="Visible"
    WindowStartupLocation="Manual"
    mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0078D7" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="MinHeight" Value="30" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="14">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="white" />
            <Setter Property="Foreground" Value="#34495E" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="MinWidth" Value="150" />
            <Setter Property="Height" Value="30" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="MinHeight" Value="35" />
            <Setter Property="Margin" Value="0,10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border
                                Padding="0,5"
                                Background="{TemplateBinding Background}"
                                BorderBrush="Black"
                                BorderThickness="1.5"
                                CornerRadius="12">
                                <ScrollViewer x:Name="PART_ContentHost" />
                            </Border>
                            <TextBlock
                                Margin="10,-10,0,0"
                                Padding="5,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Background="White"
                                FontSize="12"
                                Foreground="Black"
                                Text="{TemplateBinding Tag}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="white" />
            <Setter Property="Foreground" Value="#34495E" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="Height" Value="30" />
            <Setter Property="MinWidth" Value="150" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="MinHeight" Value="35" />
            <Setter Property="Margin" Value="0,10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Grid>
                            <Border
                                Padding="0,5"
                                Background="{TemplateBinding Background}"
                                BorderBrush="Black"
                                BorderThickness="1.5"
                                CornerRadius="12">
                                <ScrollViewer x:Name="PART_ContentHost" />
                            </Border>
                            <TextBlock
                                Margin="10,-10,0,0"
                                Padding="5,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Background="White"
                                FontSize="12"
                                Foreground="Black"
                                Text="{TemplateBinding Tag}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#0071BC" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#3F9EDE" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.05*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="45" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="1" Margin="0,10">
            <!--  Shared Path  -->
            <TextBox
                x:Name="txtSharedPath"
                Grid.Row="0"
                Tag="Path" />
        </Grid>
        <Grid
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Background="LightGray">
            <!--  Status  -->
            <TextBlock
                x:Name="txtStatus"
                Grid.Row="1"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="Bold"
                Foreground="Green"
                TextAlignment="Left"
                Visibility="Collapsed" />

            <!--  Send Button  -->
            <Button
                x:Name="btnSend"
                Width="80"
                Height="30"
                Margin="0,0,15,0"
                HorizontalAlignment="Right"
                Click="btnSend_Click"
                Content="Send" />

        </Grid>
    </Grid>
</Window>