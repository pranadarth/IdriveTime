<Window x:Class="LanChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanChatApp"
        xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
        mc:Ignorable="d" KeyDown="enterKey"
        Title="Secured Chat" Height="400" Width="600">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
            <GradientStop Color="#D7E1EC" Offset="1" />
            <GradientStop Color="#B7C3D0" Offset="0" />
        </LinearGradientBrush>
    </Window.Background>
    <Window.Resources>
        
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Mode Selection -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Connection Established.." VerticalAlignment="Center" Margin="5 0 0 1"/>
        </StackPanel>

        <!-- Chat Display -->
        <ScrollViewer x:Name="scroller" VerticalScrollBarVisibility="Hidden"
                      CanContentScroll="True" Grid.Row="1"
               VerticalAlignment="Top" Margin="0,15,0,0" >
            <StackPanel x:Name="TextArea" MaxWidth="800" Orientation="Vertical" />
        </ScrollViewer>

            <!-- Message Entry -->
        <Grid Grid.Row="2" Margin="10 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="35"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition  Width="35"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="MessageTextBox" Height="40"  FontSize="14" FontWeight="Medium" Grid.Column="0" Grid.ColumnSpan="4"
                      HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Padding="42,0,0,0" HorizontalAlignment="Stretch"
                   VerticalAlignment="Bottom" >
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Button Background="Transparent" Content="🙂" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" 
                    Click="EmojiButton_Click" x:Name="emojiBtn"
                    BorderThickness="0" Margin="4,0,0,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Background="Transparent" Content="📎" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" 
                     Click="sendBtn_Click" x:Name="sendBtn" Grid.Column="2"
                     BorderThickness="0" Margin="4,0,0,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Height="33"  Content="➢" FontSize="20" FontWeight="Medium" Grid.Column="3"  Margin="0 0 5 0"
                    VerticalAlignment="Center"  Click="SendButton_Click" Background="LightBlue" BorderThickness="1.5" >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6 20 20 6"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
        <Popup x:Name="EmojiPopup" Placement="Top" PlacementTarget="{Binding ElementName=MessageTextBox}"  
               PopupAnimation="Slide" StaysOpen="False" Grid.RowSpan="3" HorizontalOffset="18" >
            <Border Background="White" BorderBrush="Gray" BorderThickness="1" Padding="10">
                <StackPanel>
                    <TextBox x:Name="SearchBox" Width="250" Margin="10" 
                      TextChanged="SearchBox_TextChanged" />
                    <ScrollViewer Height="300" Width="300">

                        <ItemsControl Grid.Row="1" ItemsSource="{Binding DataEmojis}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Visibility="{Binding IsVisible}" VerticalContentAlignment="Top" Tag="{Binding Character}"
                                     ToolTip="{Binding UnicodeName}" Width="45" Height="45" Content="{Binding Character}"
                                     Margin="5" Click="Emoji_Click">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="Border" BorderBrush="Black" BorderThickness="1" CornerRadius="6">
                                                                <emoji:TextBlock Text="{TemplateBinding Content}"  FontSize="24" 
                                                                          VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Opacity" Value="0.7"></Setter>
                                                                </Trigger>
                                                                <Trigger Property="IsFocused" Value="True">
                                                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                                                    <Setter Property="Background" TargetName="Border" Value="Aqua" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Window>
