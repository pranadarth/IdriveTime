<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Light Theme Colors -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="#FFFFFF" />
    <SolidColorBrush x:Key="SecondaryBackground" Color="#F0F0F0" />
    <SolidColorBrush x:Key="PrimaryForeground" Color="Black" />
    <SolidColorBrush x:Key="TextBoxBackground" Color="#EFEFEF" />
    <SolidColorBrush x:Key="ButtonHoverBackground" Color="#0078D7" />
    <SolidColorBrush x:Key="ButtonBackground" Color="#005A9E" />
    <SolidColorBrush x:Key="BorderBrushColor" Color="Gray" />
    <SolidColorBrush x:Key="ScrollThumbColor" Color="#585c5e" />
    <SolidColorBrush x:Key="ScrollTrackColor" Color="#E0E0E0" />
    <SolidColorBrush x:Key="PlaceholderForeground" Color="#808080" />

</ResourceDictionary>