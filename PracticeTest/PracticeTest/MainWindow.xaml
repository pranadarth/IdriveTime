<Window x:Class="PracticeTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticeTest" 
        xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
        mc:Ignorable="d" 
        Title="MainWindow" >
    <Window.Resources>

        <DrawingImage x:Key="classic_viewer_iconImage">
            <DrawingImage.Drawing>
                <DrawingGroup ClipGeometry="M0,0 V14 H9 V0 H0 Z">
                    <DrawingGroup Opacity="1">
                        <DrawingGroup Opacity="1">
                            <GeometryDrawing Brush="#FF226292" Geometry="F1 M9,14z M0,0z M8.3,9L5.4,9 6.9,12.7C7,13,6.9,13.2,6.6,13.4L5.3,14C5.1,14.1 4.8,14 4.7,13.7 4.7,13.7 4.7,13.7 4.7,13.7L3.3,10.2 0.900000000000001,12.6C0.700000000000001,12.8 0.400000000000001,12.8 0.200000000000001,12.6 0.200000000000001,12.6 0.100000000000001,12.4 0.100000000000001,12.2L0.100000000000001,0.5C0,0.2 0.2,0 0.5,0 0.6,0 0.8,0 0.9,0.1L8.7,8.1C8.9,8.3 8.9,8.6 8.7,8.8 8.7,8.8 8.5,8.9 8.4,8.9z" />
                        </DrawingGroup>
                    </DrawingGroup>
                </DrawingGroup>
            </DrawingImage.Drawing>
        </DrawingImage>

        <DrawingImage x:Key="classic_viewer_iconImage_disabled">
            <DrawingImage.Drawing>
                <DrawingGroup ClipGeometry="M0,0 V14 H9 V0 H0 Z">
                    <DrawingGroup Opacity="1">
                        <DrawingGroup Opacity="1">
                            <GeometryDrawing Brush="#6C737B" Geometry="F1 M9,14z M0,0z M8.3,9L5.4,9 6.9,12.7C7,13,6.9,13.2,6.6,13.4L5.3,14C5.1,14.1 4.8,14 4.7,13.7 4.7,13.7 4.7,13.7 4.7,13.7L3.3,10.2 0.900000000000001,12.6C0.700000000000001,12.8 0.400000000000001,12.8 0.200000000000001,12.6 0.200000000000001,12.6 0.100000000000001,12.4 0.100000000000001,12.2L0.100000000000001,0.5C0,0.2 0.2,0 0.5,0 0.6,0 0.8,0 0.9,0.1L8.7,8.1C8.9,8.3 8.9,8.6 8.7,8.8 8.7,8.8 8.5,8.9 8.4,8.9z" />
                        </DrawingGroup>
                    </DrawingGroup>
                </DrawingGroup>
            </DrawingImage.Drawing>
        </DrawingImage>

        <Style x:Key="SchedulerConnectButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="White" BorderBrush="#61A6D4" 
                                BorderThickness="1.2" CornerRadius="12.5" Padding="1" 
                                Height="25" MaxWidth="50" MinWidth="42">
                            <Grid>
                                <Image  x:Name="imgClassicIconImg" HorizontalAlignment="Left"
                                        Source="{StaticResource classic_viewer_iconImage}"
                                        Height="11" Width="11"
                                        Margin="8,0,0,0" />
                                <TextBlock x:Name="imgIconText" FontSize="11" 
                                           Foreground="#226292" FontFamily="Segoe UI" FontWeight="SemiBold"
                                           Margin="18.5,0,2.5,2.5" HorizontalAlignment="Left" VerticalAlignment="Center"
                                           TextWrapping="NoWrap"
                                           TextTrimming="None"
                                           Text="{Binding Content, RelativeSource={RelativeSource TemplatedParent},StringFormat='({0})'}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                <Setter TargetName="Border" Property="Background" Value="#E6F2FF" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                <Setter TargetName="Border" Property="Background" Value="#C8ECFF" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                <Setter TargetName="Border" Property="Background" Value="#E3E3E3" />
                                <Setter TargetName="Border" Property="BorderBrush" Value="#B4B4B4" />
                                <Setter TargetName="imgIconText" Property="Foreground" Value="#6C737B" />
                                <Setter TargetName="imgClassicIconImg" Property="Source" Value="{StaticResource classic_viewer_iconImage_disabled}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </Window.Resources>
    <Grid>
        <Button Content="5" Style="{StaticResource SchedulerConnectButtonStyle}" IsEnabled="True"/>
    </Grid>
</Window>
