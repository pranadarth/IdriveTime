<Window
    x:Class="StatusReporter.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StatusReporter"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Status Reporter"
    Width="520"
    Height="440"
    Background="#f3f5f7"
    FontFamily="Segoe UI"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <!--  Center card  -->
        <Border
            Margin="20"
            Padding="18"
            Background="White"
            CornerRadius="12"
            Effect="{DynamicResource DropShadowEffect}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Header  -->
                <DockPanel Grid.Row="0" Margin="0,0,0,8">
                    <StackPanel DockPanel.Dock="Left" Orientation="Vertical">
                        <TextBlock
                            FontSize="18"
                            FontWeight="SemiBold"
                            Text="Daily Status Reporter" />
                        <TextBlock
                            x:Name="Subtitle"
                            Margin="0,4,0,0"
                            FontSize="12"
                            Foreground="#666" />
                    </StackPanel>

                    <!--  Settings gear  -->
                    <Button
                        x:Name="SettingsBtn"
                        Width="36"
                        Height="36"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="SettingsBtn_Click"
                        DockPanel.Dock="Right"
                        ToolTip="Settings">
                        <Viewbox Width="18" Height="18">
                            <Canvas Width="24" Height="24">
                                <!--  simple gear icon path  -->
                                <Path Data="M12 15.5A3.5 3.5 0 1 0 12 8.5a3.5 3.5 0 0 0 0 7z M19.4 12.9c.03-.3.1-.6.1-.9s-.07-.6-.1-.9l2.1-1.6a.5.5 0 0 0 .12-.6l-2-3.46a.5.5 0 0 0-.6-.22l-2.5 1a8.12 8.12 0 0 0-1.6-.9l-.38-2.65A.5.5 0 0 0 13.8 2h-4a.5.5 0 0 0-.49.42L8.93 5.07c-.56.22-1.08.5-1.6.9l-2.5-1a.5.5 0 0 0-.6.22L1.16 8.78a.5.5 0 0 0 .12.6l2.1 1.6c-.03.3-.1.6-.1.9s.07.6.1.9L1.28 15.2a.5.5 0 0 0-.12.6l2 3.46c.13.23.4.32.62.22l2.5-1c.5.4 1.04.72 1.6.94l.38 2.65c.06.26.3.44.56.44h4c.28 0 .52-.18.58-.44l.38-2.65c.56-.22 1.1-.53 1.6-.94l2.5 1c.22.1.49 0 .62-.22l2-3.46a.5.5 0 0 0-.12-.6l-2.13-1.6z" Fill="#666" />
                            </Canvas>
                        </Viewbox>
                    </Button>
                </DockPanel>

                <!--  Date and tasks  -->
                <StackPanel Grid.Row="1">
                    <StackPanel
                        Margin="0,0,0,8"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="Date:" />
                        <Border
                            Margin="8,0,0,0"
                            Padding="6,4"
                            Background="#f0f4ff"
                            CornerRadius="6">
                            <TextBlock x:Name="DateText" FontWeight="SemiBold" />
                        </Border>
                    </StackPanel>

                    <TextBlock
                        Margin="0,4,0,6"
                        FontWeight="Bold"
                        Text="Tasks completed today:" />
                    <TextBox
                        x:Name="TasksBox"
                        Height="150"
                        Padding="8"
                        AcceptsReturn="True"
                        BorderBrush="#e5e7eb"
                        BorderThickness="1"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto" />
                </StackPanel>

                <!--  Footer  -->
                <Grid
                    Grid.Row="2"
                    Margin="0,12,0,0">
                    <CheckBox x:Name="WFHCheckbox" Content="WFH" HorizontalAlignment="Left" FontWeight="SemiBold" />
                    <Button
                        x:Name="OpenBtn"
                        Width="120" HorizontalAlignment="Right"
                        Height="36"
                        Background="#2463ff"
                        BorderBrush="#2463ff"
                        Click="OpenBtn_Click"
                        Cursor="Hand"
                        FontWeight="SemiBold"
                        Foreground="White">
                        Send Mail
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>

    <!--  drop shadow resource  -->
    <Window.Resources>
        <DropShadowEffect
            x:Key="DropShadowEffect"
            BlurRadius="18"
            Opacity="0.08"
            ShadowDepth="4"
            Color="#444" />
    </Window.Resources>
</Window>