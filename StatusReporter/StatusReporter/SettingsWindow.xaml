<Window
    x:Class="StatusReporter.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StatusReporter"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Settings"
    Width="460"
    Height="360"
    Background="#fafafa"
    FontFamily="Segoe UI"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            FontSize="16"
            FontWeight="SemiBold"
            Text="Settings" />

        <StackPanel Grid.Row="1" Margin="0,12,0,0">
            <TextBlock FontWeight="Bold" Text="To (single address)" />
            <TextBox x:Name="ToBox" Margin="0,6,0,8" />

            <TextBlock FontWeight="Bold" Text="Cc (comma-separated)" />
            <TextBox x:Name="CcBox" Margin="0,6,0,8" />

            <TextBlock FontWeight="Bold" Text="Signature name" />
            <TextBox x:Name="SigBox" Margin="0,6,0,6" />
            <TextBlock
                FontSize="11"
                Foreground="#666"
                Text="Changes are saved to your AppData folder." />
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Margin="0,12,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="90"
                Height="30"
                Margin="0,0,8,0"
                Click="Cancel_Click">
                Cancel
            </Button>
            <Button
                Width="90"
                Height="30"
                Background="#2463ff"
                Click="Save_Click"
                Foreground="White">
                Save
            </Button>
        </StackPanel>
    </Grid>
</Window>
