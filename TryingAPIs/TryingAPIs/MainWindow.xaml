<Window x:Class="TryingAPIs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TryingAPIs"
        mc:Ignorable="d"
        Height="250" Width="400" 
        Background="#212121"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="NameBox"
                       BorderBrush="White"
                       Background="Transparent"
                       FontSize="16"
                       Foreground="White"
                       Margin="10"
                       TextAlignment="Center"
                       Width="150"/>
            
            <TextBlock x:Name="FactTextBlock"
                       Text="Predict the gender of a person based name"
                       FontSize="16"
                       Foreground="White"
                       Margin="10"
                       TextAlignment="Center"
                       Width="350"/>

            <Button Content="Get the Fact"
                    Click="GetFactButton_Click"
                    Background="#FF9800"
                    Foreground="White"
                    FontSize="14"
                    Width="150"
                    Height="40"
                    Margin="10"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>