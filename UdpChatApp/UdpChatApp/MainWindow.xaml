<Window x:Class="UdpChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UDP Chat" Height="350" Width="525">
    <Grid>
        <Label Content="IP Address:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="IpAddressInput" HorizontalAlignment="Left" Margin="80,10,0,0" VerticalAlignment="Top" Width="150" Text="127.0.0.1"/>
        <Label Content="Port:" HorizontalAlignment="Left" Margin="240,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PortInput" HorizontalAlignment="Left" Margin="280,10,0,0" VerticalAlignment="Top" Width="80" Text="8080"/>
        <ListBox x:Name="ChatMessages" HorizontalAlignment="Left" Height="200" Margin="10,40,0,0" VerticalAlignment="Top" Width="480"/>
        <TextBox x:Name="MessageInput" HorizontalAlignment="Left" Height="30" Margin="10,250,0,0" VerticalAlignment="Top" Width="380"/>
        <Button Content="Send" HorizontalAlignment="Left" Margin="400,250,0,0" VerticalAlignment="Top" Width="90" Click="SendMessage_Click"/>
    </Grid>
</Window>
